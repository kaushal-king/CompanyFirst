<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/adult_img</item>
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/logoname</item>-->
        <item name="postSplashScreenTheme">@style/Theme.Firsttask</item>


    </style>


    <style name="Theme.Firsttask" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textColor">@color/black</item>
        <item name="metaTextColor">@color/lightgrey</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="bgColor">@color/white</item>
        <item name="bgLightColor">@color/white</item>
        <item name="bgToolbar">@color/white</item>
        <item name="buttonColor">@color/purple_500</item>
        <item name="calculatorAction">@color/purple_500</item>
        <item name="editTextSelectedOutline">@color/purple_500</item>
        <item name="editTextOutline">@color/lightgrey</item>
        <item name="hintTextColor">@color/lightgrey</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Firsttask.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>



    </style>


<!--    dark theme  for app-->
    <style name="Theme.Firsttask.NoActionBar.Night">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/lightblack</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="textColor">@color/white</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="metaTextColor">@color/greywhite</item>
        <item name="bgColor">@color/black</item>
        <item name="bgLightColor">@color/lightblack</item>
        <item name="bgToolbar">@color/lightblack</item>
        <item name="buttonColor">@color/black</item>
        <item name="calculatorAction">@color/orange</item>
        <item name="editTextOutline">@color/greywhite</item>
        <item name="editTextSelectedOutline">@color/white</item>
        <item name="hintTextColor">@color/greywhite</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyleNight</item>
        <item name="android:windowContentTransitions">true</item>
    </style>




    <!--    christmas theme  for app-->
    <style name="Theme.Firsttask.NoActionBar.Christmas">

        <item name="colorPrimary">@color/redlight</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="colorAccent">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="textColor">@color/black</item>
        <item name="metaTextColor">@color/lightgrey</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="bgColor">@color/white</item>
        <item name="bgLightColor">@color/white</item>
        <item name="bgToolbar">@color/red</item>
        <item name="buttonColor">@color/green</item>
        <item name="calculatorAction">@color/actionButton</item>
        <item name="editTextOutline">@color/lightgrey</item>
        <item name="editTextSelectedOutline">@color/green</item>
        <item name="hintTextColor">@color/green</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyleChristmas</item>
        <item name="android:windowContentTransitions">true</item>
    </style>



    <!--    tool bar style and background color-->
    <style name="MyToolbarStyle">
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:windowBackground">@drawable/side_nav_bar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


<!--calculator Button style-->
    <style name="ActionButtonstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:insetTop">3dp</item>
    </style>

    <style name="NumberButtonstyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/numberactionButton</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:insetTop">3dp</item>

    </style>





    <!--navigation Hamburger color change-->
    <style name="DrawerHamburgerStyleNight" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="DrawerHamburgerStyleChristmas" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
        <item name="textColor">@color/white</item>
    </style>


<!--    text input border stroke-->
    <style name="textinput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

<!--    card layout corner-->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomLeft">35dp</item>

    </style>



    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_search_24</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <style name="Theme.Firsttask.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Firsttask.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorBackgroundFloating">@color/teal_200</item>
    </style>


</resources>